<section class="milestones">
  <h2>Upcoming milestones</h2>
  {% set ms = collections.milestones | default([]) %}
  {% if ms | length %}
    <ul>
      {% for m in ms | limit(6)%}
        <li>
          <strong>{{ m.title }}</strong>
          {% if m.due %}<small>due {{ m.due }}</small>{% endif %}
          {% if m.url %}<a href="{{ m.url }}">view note</a>{% endif %}
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No milestones yet. Add <code>- [ ] â€¦ #milestone @YYYY-MM-DD</code> to any note.</p>
  {% endif %}
    <p class="more"><a href="{{ '/planning/' | url }}">See upcoming tasks â†’</a></p>
</section>


<section class="latest-posts">
  <h2>Latest Reflections</h2>
  {% set posts = collections.postFeaturedFirst | default([]) %}
  {% if posts | length %}
  <div class="cards-wrap">
    <ul class="cards grid-2x4">
      {% for post in posts | limit(4) %}
        <li class="card">
          <h3>
            <a href="{{ post.url | url }}">{{ post.data.title or post.fileSlug }}</a>
            {% if post.data.featured %}<span class="badge">Featured</span>{% endif %}
          </h3>
          <small>{{ post.date | isoDate }}</small>
          {% set desc = post.data.description or (post.templateContent | striptags) %}
          <p>{{ desc | truncate(140) }}</p>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>

  {# Recent notes #}
  <h2>Recent Notes</h2>
  {% set z = collections.zettels | default([]) %}
  {% if z | length %}
    <ul class="list">
      {% for n in z | limit(4) %}
        <li>
          <a href="{{ n.url | url }}">{{ n.data.title or n.fileSlug }}</a>
          {% if n.data.updated %}
            <small>updated {{ n.data.updated | isoDate }}</small>
          {% else %}
            <small>{{ n.date | isoDate }}</small>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
  <p class="more"><a href="{{ '/notes/' | url }}">See all notes â†’</a></p>
</section>

<section class="featured-notes">
  <h2>Featured Notes</h2>
  {% set fz = collections.featuredZettels | default([]) %}
  {% if fz | length %}
  <div class="cards-wrap">
    <ul class="cards grid-2x4">
      {% for n in fz | limit(8) %}
        <li class="card">
          <h3>
            <a href="{{ n.url | url }}">{{ n.data.title or n.fileSlug }}</a>
            {% if n.data.featured %}<span class="badge">Featured</span>{% endif %}
          </h3>
          {% if n.data.updated %}
            <small>updated {{ n.data.updated | isoDate }}</small>
          {% else %}
            <small>{{ n.date | isoDate }}</small>
          {% endif %}
          {% set desc = n.data.description or (n.templateContent | striptags) %}
          <p>{{ desc | truncate(140) }}</p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Add <code>featured: true</code> (or tag <code>gardenEntry</code>) in a noteâ€™s front matter to feature it here.</p>
  {% endif %}
  </div>
</section>

